<%= for {date, items} <- @articles do %>
  <div class="container pt-4 pb-5">
    <div class="row">
      <div class="col-lg-12">
        <%= header_tag(date) %>

          <div class="bc-news mt-3">

            <%= for item <- items do %>
              <%= item_tag(item) %>
            <% end %>
          </div>
        </div>
    </div>
  </div>
<% end %>
