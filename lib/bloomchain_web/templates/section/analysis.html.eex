        <a class="bc-analitics__text-link nav-link" href="#analitics">
          <span class="text-primary">—</span><span class="ml-2">Аналитика</span>
        </a>
      </nav>
    </div>
  </div>
</div>

<div class="bg-white">
  <div class="container py-5">
    <a name="analitics"></a>
    <h1 class="bc-analitics__h1">Аналитика</h1>
    <div class="js-article-list">
      <%= render SharedView, "_article_block.html", assigns %>
