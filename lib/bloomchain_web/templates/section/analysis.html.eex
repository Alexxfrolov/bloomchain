      <div class="pt-3" id="js-chart-top10-cryptocurrency" style="min-width: 300px; max-width: 800px"></div>
      <script async src="<%= static_path(@conn, "/customer/charts.js") %>"></script>
    </div>

    <div class="col-md-3 mt-5 mt-md-0">
      <nav class="nav flex-column bc-analitics__page-nav d-md-block d-none">
