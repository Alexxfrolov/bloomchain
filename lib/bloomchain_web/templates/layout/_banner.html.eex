<%= if @banner do %>
  <div class="bc-advertising__image-hot mx-auto">
    <%=
      content_tag(:picture) do
        [
          tag(:source, srcset: File.url({@banner.mobile_cover.file, @banner.mobile_cover}), media: "(min-width: 980px)"),
          img_tag(File.url({@banner.mobile_cover.file, @banner.mobile_cover}))
        ]
      end
      |> link(to: @banner.target_url)
    %>
  </div>
<% end %>
