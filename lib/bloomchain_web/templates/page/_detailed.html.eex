<div class="col-lg-6">
    <h1 class="highlight mb-4">В Деталях<%= link("Больше", to: detailed_path(@conn, :index), class: "btn btn-title") %></h1>

    <%= SharedView.main_article_tag(List.first(@articles), conn: @conn) %>

    <%= for article <- @articles |> tl() do %>
      <hr class="bc-article__separator mx-0 my-3">
      <%= render_article(article, conn: @conn, path: article_path(@conn, :show, "detailed", article.slug)) %>
    <% end %>
</div>
