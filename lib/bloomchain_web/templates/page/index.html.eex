        <div class="row">
          <%= if length(@context[:analysis]) > 0 do %>
            <%= render "_analysis.html", conn: @conn, articles: @context[:analysis] %>
          <% end %>
          <%= if length(@context[:people]) > 0 do %>
            <%= render "_people.html", conn: @conn, articles: @context[:people] %>
          <% end %>
        </div>
    </div>
</div>

