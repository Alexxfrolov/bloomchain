<div class="container py-4">
    <div class="row">
      <%= if length(@context[:newsfeed]) > 0 do %>
        <%= render "_newsfeed.html", conn: @conn, articles: @context[:newsfeed] %>
      <% end %>
      <%= if length(@context[:detailed]) > 0 do %>
        <%= render "_detailed.html", conn: @conn, articles: @context[:detailed] %>
      <% end %>
    </div>
</div>

<div class="bg-white">
