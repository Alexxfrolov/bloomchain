erlang_host=https://s3.amazonaws.com/heroku-buildpack-elixir
erlang_version=21.3.3
elixir_version=1.10
always_rebuild=false

# A command to run right before fetching dependencies
hook_pre_fetch_dependencies="pwd"

# A command to run right before compiling the app (after elixir, .etc)
hook_pre_compile="mix deps.clean --all"

hook_compile="mix compile --force"

runtime_path=/app
